{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build & Flash nRF52840",
            "type": "probe-rs-debug",
            "request": "launch",
            "chip": "nRF52840_xxAA",
            "preLaunchTask": "Build and Flash nRF52840",
            "coreConfigs": [
                {
                    "coreIndex": 0,
                    "rttEnabled": true,
                    "programBinary": "${workspaceFolder}/target/thumbv7em-none-eabihf/debug/dongle-fw"
                }
            ]
        }
    ]
}